@implements IDisposable
@inject NavigationManager NavigationManager

<div class="menu-container">

    <div class="menu-header">
        <a class="navbar-brand" href="/">
            <i class="bi bi-gear-wide text-primary"></i>
            <span class="ms-2">AutoParts</span>
        </a>
    </div>

    <nav class="menu-links">
        <div class="menu-item">
            <NavLink class="menu-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door"></i>
                <span>Home</span>
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="menu-item">
                    <NavLink class="menu-link" href="Productos/Index">
                        <i class="bi bi-box-seam"></i>
                        <span>Productos</span>
                    </NavLink>
                </div>
                <div class="menu-item">
                    <NavLink class="menu-link" href="Ventas/Index">
                        <i class="bi bi-cash"></i>
                        <span>Ventas</span>
                    </NavLink>
                </div>
                <div class="menu-item">
                    <NavLink class="menu-link" href="Servicios/Index">
                        <i class="bi bi-wrench"></i>
                        <span>Servicios</span>
                    </NavLink>
                </div>                
                <div class="menu-item">
                    <NavLink class="menu-link" href="Citas/Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Citas</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>

    <div class="profile-section">
        <AuthorizeView>
            <Authorized>
                <div class="menu-item">
                    <NavLink class="menu-link" href="Account/Manage">
                        <i class="bi bi-person-circle"></i>
                        <span>@context.User.Identity?.Name</span>
                    </NavLink>
                </div>
                <div class="menu-item">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="menu-link-button">
                            <i class="bi bi-box-arrow-left"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="menu-item">
                    <NavLink class="menu-link" href="Account/Register">
                        <i class="bi bi-person-plus"></i>
                        <span>Registro</span>
                    </NavLink>
                </div>
                <div class="menu-item">
                    <NavLink class="menu-link" href="Account/Login">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Iniciar Sesión</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}