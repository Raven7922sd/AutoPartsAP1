        </div>
    </div>
</nav>

<header class="bg-dark py-3 shadow-sm">
    <div class="container px-4 px-lg-5 my-3">
        <div id="bannerCarousel" class="carousel slide rounded-3 overflow-hidden shadow" data-bs-ride="carousel" data-bs-interval="3500">
            <div class="carousel-inner">
                @if (ListaProductos == null || !ListaProductos.Any())
                {
                    <div class="carousel-item active">
                        <img src="https://placehold.co/1200x400/dee2e6/6c757d?text=Cargando+Productos..." class="d-block w-100" style="height: 400px; object-fit: cover;" />
                    </div>
                }
                else
                {
                    @for (int i = 0; i < ListaProductos.Count; i++)
                    {
                        var producto = ListaProductos[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@(producto.ProductoImagenUrl ?? "https://placehold.co/1200x400/dee2e6/6c757d?text=No+Imagen+Disponible")"
                                 class="d-block w-100"
                                 style="height: 400px; object-fit: cover;"
                                 alt="@producto.ProductoNombre" />
                        </div>
                    }
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <div class="text-center text-white mt-4">
            <h1 class="display-5 fw-bold">Todo lo que tu vehículo necesita</h1>
            <p class="lead text-white-50">Con la mejor calidad-precio</p>
        </div>
    </div>
</header>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-4">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center g-4">
            @if (ListaProductos == null || !ListaProductos.Any())
            {
                <div class="col-12 text-center">
                    <p>No hay productos disponibles en este momento.</p>
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando productos...</span>
                    </div>
                </div>
            }
            else
            {
                @foreach (var producto in ListaProductos)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 hover-shadow transition">
                            <img src="@(producto.ProductoImagenUrl ?? "https://placehold.co/1200x400/dee2e6/6c757d?text=No+Imagen+Disponible")"
                                 class="d-block w-100"
                                 style="height: 400px; object-fit: cover;"
                                 alt="@producto.ProductoNombre" />

                            <div class="card-body p-3 text-center">
                                <h5 class="fw-bold">@producto.ProductoNombre</h5>
                                <p class="mb-1 text-primary fw-semibold">
                                    RD$@producto.ProductoMonto.ToString("N2", CultureInfo.GetCultureInfo("es-DO"))
                                </p>
                                <p>@producto.Categoria</p>
                                <small class="text-muted">@producto.ProductoDescripcion</small>
                            </div>

                            <div class="card-footer bg-white border-0 text-center pb-3">
                                <button class="btn btn-outline-primary w-75" @onclick="() => AñadirCarrito(producto)">
                                    Añadir al carrito
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<section id="nosotros" class="py-5 bg-white border-top">
    <div class="container px-4 px-lg-5">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="images/productos/reparacion.jpg" class="img-fluid rounded shadow" alt="Sobre nosotros" />
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">Sobre Nosotros</h2>
                <p class="text-muted">
                    En <strong>AutoParts</strong> nos dedicamos a ofrecer productos y servicios de alta calidad para el mantenimiento y cuidado de tu vehículo.
                    Con años de experiencia en el mercado, nuestro compromiso es brindarte confianza, seguridad y satisfacción en cada visita.
                </p>
            </div>
        </div>
    </div>
</section>

<section id="servicios" class="py-5 bg-light">
    <div class="container px-4 px-lg-5 text-center">
        <h2 class="fw-bold mb-5">Nuestros Servicios</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-droplet-half display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-semibold">Lavado de Vehículos</h5>
                        <p class="card-text">Servicio completo de lavado interior y exterior para que tu auto luzca como nuevo.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-tools display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-semibold">Reparación</h5>
                        <p class="card-text">Mecánica ligera y diagnósticos rápidos para mantener tu vehículo en óptimas condiciones.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-circle-half display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-semibold">Cambio de Gomas</h5>
                        <p class="card-text">Instalación y balanceo de neumáticos nuevos y usados con garantía.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-droplet-fill display-4 text-primary mb-3"></i>
                        <h5 class="card-title fw-semibold">Cambio de Aceite</h5>
                        <p class="card-text">Aceites certificados y filtros de calidad para prolongar la vida útil de tu motor.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<footer class="py-5 bg-dark text-white">
    <div class="container px-4 px-lg-5">
        <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
                <h5 class="fw-bold">AutoParts</h5>
                <p class="small text-white-50">
                    Brindamos soluciones automotrices con productos de calidad y servicios confiables.
                    Tu vehículo en buenas manos, siempre.
                </p>
            </div>
            <div class="col-md-3">
                <h6 class="fw-semibold">Secciones</h6>
                <ul class="list-unstyled small">
                    <li><a href="/" class="text-white-50 text-decoration-none">Inicio</a></li>
                    <li><a href="#nosotros" class="text-white-50 text-decoration-none">Nosotros</a></li>
                    <li><a href="#servicios" class="text-white-50 text-decoration-none">Servicios</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h6 class="fw-semibold">Contacto</h6>
                <p class="small text-white-50 mb-1"><i class="bi bi-envelope me-2"></i> contacto@autoparts.com</p>
                <p class="small text-white-50"><i class="bi bi-phone me-2"></i> +1 (809) 123-4567</p>
            </div>
        </div>
        <div class="text-center mt-4 border-top pt-3">
            <small class="text-white-50">© 2025 AutoParts. Todos los derechos reservados.</small>
        </div>
    </div>
</footer>

@code {
    public List<Productos> ListaProductos { get; set; } = new List<Productos>();
    private int CarritoConteo = 0;
    private string resultado = "";

    protected override async Task OnInitializedAsync()
    {
        ListaProductos = await productoservice.Listar(c => c.ProductoId > 0);
        ActualizarCarrito();
        carritoservice.OnCartChanged += ActualizarCarrito;
    }

    public void Dispose()
    {
        carritoservice.OnCartChanged -= ActualizarCarrito;
    }

    private void AñadirCarrito(Productos producto)
    {
        carritoservice.AddItem(producto);
        itoastservice.ShowSuccess($"'{producto.ProductoNombre}' añadido al carrito.");
    }

    private void ActualizarCarrito()
    {
        CarritoConteo = carritoservice.GetTotalItems();
        StateHasChanged();
    }

    private void NavigateToCart()
    {
        navigationmanager.NavigateTo("/Carrito");
    }

    private void NavigateToAccount()
    {
        navigationmanager.NavigateTo("/Account/Manage");
    }
}
