@page "/Account/Manage/Compras"
@inject UserManager<ApplicationUser> userManager
@inject NavigationManager navigationManager
@inject VentasService ventasService
@inject ComprasService comprasService
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Historial de Compras</PageTitle>

<div class="row g-4">
    <div class="col-lg-3">
        <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body px-3 py-4">
                <ManageNavMenu />
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body p-4">
                <div class="container-fluid">
                    <h2 class="text-center fw-bold text-primary mb-5">Mis Compras</h2>

                    @if (ventas == null)
                    {
                        <div class="text-center text-muted">Cargando tus compras...</div>
                    }
                    else if (!ventas.Any())
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            No has realizado ninguna compra.
                        </div>
                    }
                    else
                    {
                        <div class="space-y-4">
                            @foreach (var venta in ventas)
                            {
                                <div class="card border-0 shadow-sm rounded-4 mb-4">
                                    <div class="card-header bg-light border-0 d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="fw-bold text-primary mb-0">Factura #@venta.VentaId</h5>
                                            <small class="text-muted">Fecha: @venta.Fecha.ToShortDateString()</small>
                                        </div>
                                        <h5 class="fw-bold text-success mb-0">Total: @venta.Total.ToString("C")</h5>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Producto</th>
                                                        <th>Cantidad</th>
                                                        <th>Precio</th>
                                                        <th>Subtotal</th>
                                                        <th>Dirección</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var detalle in venta.Detalles)
                                                    {
                                                        <tr>
                                                            <td>@detalle.ProductoNombre</td>
                                                            <td>@detalle.Cantidad</td>
                                                            <td>@detalle.Precio.ToString("C")</td>
                                                            <td>@((detalle.Cantidad * (detalle.Precio)).ToString("C"))</td>
                                                            <td>@detalle.Direccion</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<VentaDto> ventas = new();

    protected override async Task OnInitializedAsync()
    {
        var context = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await userManager.GetUserAsync(context.User);

        if (user != null)
        {
            ventas = await comprasService.ObtenerVentasPorUsuario(user.Id);
        }
        else
        {
            navigationManager.NavigateTo("/Identity/Account/Login", true);
        }
    }

    private async Task MostrarFactura(int ventaId)
    {
        var factura = await comprasService.ObtenerFacturaPorIdAsync(ventaId);
    }
}
