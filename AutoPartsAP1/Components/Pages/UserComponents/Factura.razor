@page "/Factura/{ventaId:int}"
@inject VentasService ventasService
@inject NavigationManager navigationManager


<PageTitle>Factura</PageTitle>
@if (venta == null)
{
    <div class="text-center my-5">
        <h4 class="text-muted">Cargando factura...</h4>
        <div class="spinner-border text-primary mt-3" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                    <div>
                        <h2 class="h4 fw-bold text-primary mb-0"><i class="bi bi-receipt me-2"></i>Factura #@venta.VentaId</h2>
                        <small class="text-muted">Fecha: @venta.Fecha.ToString("dd/MM/yyyy hh:mm tt", new CultureInfo("es-DO"))</small>
                    </div>
                    <div>
                        <h4 class="fw-bold text-success mb-0">Total: RD$ @venta.Total.ToString("N2")</h4>
                    </div>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold text-dark mb-3">Detalles de la compra</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 rounded-3 overflow-hidden">
                            <thead class="table-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in venta.VentasDetalles)
                                {
                                    <tr>
                                        <td>@detalle.Producto?.ProductoNombre</td>
                                        <td>@detalle.Cantidad</td>
                                        <td>RD$ @detalle.PrecioUnitario.ToString("N2")</td>
                                        <td>RD$ @((detalle.Cantidad * detalle.PrecioUnitario).ToString("N2"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="text-end">
                    <h5 class="fw-bold text-success">Total Pagado: RD$ @venta.Total.ToString("N2")</h5>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <a href="/" class="btn btn-primary btn-lg fw-bold">
                        <i class="bi bi-house-door-fill me-2"></i>Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
}
@code {
    [Parameter]
    public int ventaId { get; set; }

    private Ventas? venta;

    protected override async Task OnInitializedAsync()
    {
        venta = await ventasService.BuscarVentas(ventaId);

        if (venta == null)
        {
            navigationManager.NavigateTo("/Error");
        }
    }
}
